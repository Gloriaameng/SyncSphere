/**app.wxss**/
page {
  /* 主题色 */
  --primary-color: #1890FF;
  --success-color: #73D13D;
  --warning-color: #FF9C40;
  --error-color: #FF4D4F;
  --background-color: #FFF0F0;
  
  /* 文字颜色 */
  --text-primary: #1D2129;
  --text-secondary: #4E5969;
  --text-tertiary: #86909C;
  
  /* 标签颜色 */
  --tag-warning-bg: #FFF7E6;
  --tag-warning-text: #FF9C40;
  --tag-primary-bg: #E6F4FF;
  --tag-primary-text: #1890FF;
  --tag-success-bg: #F6FFED;
  --tag-success-text: #73D13D;
  
  /* 圆角 */
  --radius-large: 24rpx;
  --radius-medium: 16rpx;
  --radius-small: 8rpx;
  
  /* 阴影 */
  --shadow-card: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--text-primary);
  font-size: 28rpx;
  line-height: 1.4;
}

/* 重置样式 */
view, text, scroll-view {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

button {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background: none;
  line-height: 1;
  font-size: inherit;
  color: inherit;
}

button::after {
  border: none;
}

/* 全局容器样式 */
.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: var(--background-color);
}

/* 全局卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-card);
}

/* 全局状态标签样式 */
.status-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-small);
  font-size: 22rpx;
  font-weight: 400;
  line-height: 1.4;
}

.status-tag.warning {
  background: var(--tag-warning-bg);
  color: var(--tag-warning-text);
}

.status-tag.primary {
  background: var(--tag-primary-bg);
  color: var(--tag-primary-text);
}

.status-tag.success {
  background: var(--tag-success-bg);
  color: var(--tag-success-text);
}

/* 全局按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 20rpx;
  border-radius: var(--radius-medium);
  font-size: 24rpx;
  font-weight: 400;
  line-height: 1.4;
}

.btn.primary {
  background: var(--tag-primary-bg);
  color: var(--primary-color);
}

.btn.success {
  background: var(--tag-success-bg);
  color: var(--success-color);
}

.btn.warning {
  background: var(--tag-warning-bg);
  color: var(--warning-color);
}

/* 全局头像样式 */
.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
}

/* 全局图标样式 */
.icon {
  width: 32rpx;
  height: 32rpx;
  display: inline-flex;
}

/* 全局标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
} 
